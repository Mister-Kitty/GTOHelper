<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<SplitPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="720" minHeight="480"
           fx:id="rootSplitPane" prefWidth="${rootSplitPane.parent.width}" prefHeight="${rootSplitPane.parent.height}"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.gtohelper.datafetcher.controllers.HandAnalysisController"
    dividerPositions=".3">
   <items>
      <TabPane minWidth="100.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Tags">
            <content>
              <TableView fx:id="tagTable">
                <columns>
                  <TableColumn fx:id="tagTableIdColumn" minWidth="30.0" text="Id#" />
                  <TableColumn fx:id="tagTableTagColumn" minWidth="70.0" text="Tag" />
                </columns>
              </TableView>
            </content>
          </Tab>
        </tabs>
      </TabPane>
      <VBox >
         <children>
            <TableView fx:id="handsTable" prefHeight="372.0" minWidth="200.0">
              <columns>
                <TableColumn fx:id="handsTableDateColumn" text="Date" />
                <TableColumn fx:id="handsTableCWonColumn" text="\$ Pot" />
                <TableColumn fx:id="handsTableCardsColumn" text="Cards" />
                <TableColumn fx:id="handsTableRunoutColumn" text="Runout" />
              </columns>
            </TableView>
             <HBox>
                <Button fx:id="selectAllButton" mnemonicParsing="false" prefHeight="25.0" text="Select all from table" onAction="#selectAll"/>
                <Button fx:id="solveButton" disable="true" mnemonicParsing="false" prefHeight="25.0" text="Solve highlighted hands" onAction="#solveSelected"/>
             </HBox>
         </children>
      </VBox>
   </items>
</SplitPane>
